{
  "pluginAlias": "ConnectLifeAircon",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "ConnectLife Aircon",
  "footerDisplay": "Configure your ConnectLife Aircon appliances by name.",
  "schema": {
    "type": "object",
    "required": ["name","email", "password", "appliances"],
    "properties": {
      "name": {
        "title": "Plugin Name",
        "type": "string",
        "default": "ConnectLife Aircon",
        "description": "ConnectLife account email"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "format": "email",
        "description": "ConnectLife account email"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "format": "password",
        "description": "ConnectLife account password"
      },
      "appliances": {
        "title": "Appliances",
        "type": "array",
        "description": "List of appliances to expose (by exact name)",
        "items": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "title": "Appliance Name",
              "type": "string",
              "description": "Exact appliance name as shown in ConnectLife (case-sensitive)"
            }
          }
        }
      }
    }
  }
}
